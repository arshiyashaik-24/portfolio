  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script>
    AOS.init();

    const text1 = "Computer Science & Applied Physics student at TUâ€¯Eindhoven";
    const line1 = document.getElementById('typed-text-line1');
    let i = 0;

    function typeLine1() {
      if (i < text1.length) {
        line1.textContent += text1[i++];
        setTimeout(typeLine1, 50);
      }
    }

    window.onload = typeLine1;
  </script>

